@model IEnumerable<Author>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th asp-display-name-for="@Model.ToList()[0].Id"></th>
            <th asp-display-name-for="@Model.ToList()[0].FirstName"></th>
            <th asp-display-name-for="@Model.ToList()[0].LastName"></th>
            <th asp-display-name-for="@Model.ToList()[0].Email"></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td asp-display-for="@item.Id"></td>
            <td asp-display-for="@item.FirstName"></td>
            <td asp-display-for="@item.LastName"></td>
            <td asp-display-for="@item.Email"></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
